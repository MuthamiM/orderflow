# ============================================
# Orderflow 001 - The Alpha Feed
# Environment Variables Configuration
# ============================================
# Copy this file to .env and fill in your keys:
#   cp .env.example .env

# OpenRouter API (for LLM Inference via n8n)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Webhook Security (shared secret between n8n and Python engine)
WEBHOOK_SECRET=your_webhook_secret_here

# Polymarket CLOB API Credentials
POLY_API_KEY=your_polymarket_api_key_here
POLY_API_SECRET=your_polymarket_api_secret_here
POLY_API_PASSPHRASE=your_polymarket_passphrase_here

# Polygon Wallet Private Key (for on-chain execution)
PRIVATE_KEY=your_polygon_wallet_private_key_here

# Polygon RPC URL
POLYGON_RPC_URL=https://polygon-rpc.com

# Risk Management Limits
MAX_ORDER_SIZE_USDC=50.0
MIN_CONFIDENCE_THRESHOLD=85.0
